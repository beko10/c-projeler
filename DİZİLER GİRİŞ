#include <iostream>

using namespace std;
// DİZİLER
int main( ) {
  int a[3]={1,2,3};// burada dizimizi tanımladık 0.indeks=1,1.indeks=2,2.indeks=3
  cout<<"a(0)="<<a[0]<<endl;
  cout<<"a(1)="<<a[1]<<endl;
  cout<<"a(2)="<<a[2]<<endl;
  cout<<endl;
  
  cout<<"-----------------------"<<endl;
 
  int b[5];//burada dizimizin eleman sayısını tanımladık
  for(int i=0;i<5;i++)//for ile dizimizin elamanlarını klavyeden girdik
  {
  	cout<<"b"<<i<<"=";cin>>b[i];
  }
  cout<<endl;
  
  cout<<"-------------------------"<<endl;
  
  int c[5],toplam=0;//burada dizimizin eleman sayısını tanımladık ve dizideki elemanları toplamak için toplam degeri tanımladık ve toplam degerini 0'a atadık
  for(int i=0;i<5;i++)//for ile dizimizin elamanlarını klavyeden girdik ve atadıgımız toplam degiskeni sayesinde elemanları topladık
  {
  	cout<<"c"<<i<<"=";cin>>c[i];
  	toplam+=c[i];
  }
  cout<<"girdiginiz dizideki elemanlar toplamai="<<toplam<<endl;
 
   cout<<"-----------------------"<<endl;
   cout<<endl;
   
   int x,k[x];//burada dizimizin kac elemanlı olması ıçın x degişkenini tanımladık  
   cout<<"Diziniz Kac Elemanli Olsun";
   cin>>x;
   for(int i=0;i<x;i++)//for ile dizimizin elamanlarını klavyeden girdik
  {
  	cout<<"k"<<i<<"=";cin>>k[i];
  }
   
     
   
   
	return 0;
}
